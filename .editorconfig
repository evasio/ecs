# https://editorconfig.org/

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
charset = utf-8
indent_style = tab
tab_width = 4
indent_size = 4

[*.md]
indent_style = space
max_line_length = 80

[COMMIT_EDITMSG]
indent_style = space
max_line_length = 80

[*.yml]
indent_style = space
indent_size = 2
